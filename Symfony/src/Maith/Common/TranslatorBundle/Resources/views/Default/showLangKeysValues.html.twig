<div class="translation_container">
  {% for key, value in translations %}
    <div class="translation_container_data">
      <a href="javascript:void(0)" onclick="$('#{{ key }}_translation').toggle()">
        {{ key }}
      </a>
      <div class="single_translation" id="{{ key }}_translation" style="display:none">
        <form action="{{ path('maith_common_translator_set_tranlations') }}" method="POST" onsubmit="return translatorManager.getInstance().sendPutTranslations(this);">
           <input type="hidden" value="{{ key }}" name="key" />
           <input type="hidden" value="{{ bundle }}" name="bundle" />
           <input type="hidden" value="{{ lang }}" name="lang" />
           <div class="clear"></div>
           <textarea name="value" rows="4" cols="50">{{ value }}</textarea>
           <div class="clear"></div>
           <input type="submit" value="{% trans %}admin_translator_change{% endtrans %}" />              
        </form>
      </div>
    </div>
    <div class="clear"></div>
  {% endfor %}
</div>