{% extends 'MaithPumpMyGasBundle::layout.html.twig' %}

{% block body -%}
<div class="row">
  <div class="col-lg-8">
    <section class="panel">
      <header class="panel-heading">{% trans %}cars_create_entry{% endtrans %}</header>
      <div class="panel-body">
        <form action="{{ path('admin_pump_car_create') }}" method="post" {{ form_enctype(form) }} role="form">
          <div class="form-group">
			  {{ form_errors(form.model) }}
              <label for="{{ form.model.vars.id }}">{% trans %}cars_model{% endtrans %}</label>
			  {{ form_widget(form.model, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
			  {{ form_errors(form.year) }}
              <label for="{{ form.year.vars.id }}">{% trans %}cars_year{% endtrans %}</label>
			  {{ form_widget(form.year, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
			  {{ form_errors(form.brand) }}
              <label for="{{ form.brand.vars.id }}">{% trans %}cars_brand{% endtrans %}</label>
			  {{ form_widget(form.brand, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default">{% trans %}cars_save{% endtrans %}</button>
          </div>	
              {{ form_rest(form) }}
          </form>
        </div>
      </section>
    </div>
    <div class="col-lg-12 text-center">
	  <a href="{{ path('admin_pump_car') }}" class="btn btn-info">
		  {% trans %}cars_back_to_list{% endtrans %}
	  </a>
	</div>
</div>
{% endblock %}
