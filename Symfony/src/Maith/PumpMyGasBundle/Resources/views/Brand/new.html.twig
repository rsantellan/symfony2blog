{% extends 'MaithPumpMyGasBundle::layout.html.twig' %}

{% block body -%}
<div class="row">
  <div class="col-lg-8">
    <section class="panel">
      <header class="panel-heading">{% trans %}brands_create_entry{% endtrans %}</header>
      <div class="panel-body">
        <form action="{{ path('admin_pump_brand_create') }}" method="post" {{ form_enctype(form) }} role="form">
          <div class="form-group">
			  {{ form_errors(form.name) }}
              <label for="{{ form.name.vars.id }}">{% trans %}brands_name{% endtrans %}</label>
			  {{ form_widget(form.name, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default">{% trans %}brands_save{% endtrans %}</button>
          </div>	
              {{ form_rest(form) }}
          </form>
        </div>
      </section>
    </div>
    <div class="col-lg-12 text-center">
	  <a href="{{ path('admin_pump_brand') }}" class="btn btn-info">
		  {% trans %}brands_back_to_list{% endtrans %}
	  </a>
	</div>
</div>
{% endblock %}
