{% extends 'MaithPumpMyGasBundle::layout.html.twig' %}

{% block javascripts %}
  <script src="{{ asset('bundles/maithpumpmygas/vendor/parsley.min.js') }}"></script>
  <script src="{{ asset('bundles/maithpumpmygas/vendor/bootstrap-datepicker/bootstrap-datepicker.js') }}"></script>
  <script type="text/javascript">
	$(function () {
	  $(".datepicker").datepicker();
      });
  </script>
{% endblock %}
{% block pagestylesheets %}
  <link rel="stylesheet" href="{{ asset('bundles/maithpumpmygas/vendor/bootstrap-datepicker/datepicker.css') }}" >
{% endblock %}

{% block body -%}
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">{% trans %}pumpdata_update_entry{% endtrans %}</header>
      <div class="panel-body">
        <form action="{{ path('admin_pump_fueldata_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} role="form">
		  <input type="hidden" name="_method" value="PUT" />  
          <div class="form-group">
			  {{ form_errors(edit_form.fueldate) }}
              <label for="{{ edit_form.fueldate.vars.id }}">{% trans %}pumpdata_fueldate{% endtrans %}</label>
                <div class="">
                <div class="input-group mg-b-md input-append date datepicker" data-date="{{ edit_form.fueldate.vars.value | date('d-m-Y') }}" data-date-format="dd-mm-yyyy">
                    {{ form_widget(edit_form.fueldate, {'attr' : {'class' : 'form-control'}}) }}
                    <span class="input-group-btn">
                        <button class="btn btn-white add-on" type="button">
                            <i class="fa fa-calendar"></i>
                        </button>
                    </span>
                </div>
              </div>
			  {#{ form_widget(edit_form.fueldate, {'attr' : {'class' : 'form-control'}}) }#}
          </div>
          <div class="form-group">
			  {{ form_errors(edit_form.price) }}
              <label for="{{ edit_form.price.vars.id }}">{% trans %}pumpdata_price{% endtrans %}</label>
			  {{ form_widget(edit_form.price, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
			  {{ form_errors(edit_form.fuelquantity) }}
              <label for="{{ edit_form.fuelquantity.vars.id }}">{% trans %}pumpdata_fuelquantity{% endtrans %}</label>
			  {{ form_widget(edit_form.fuelquantity, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
			  {{ form_errors(edit_form.kilometers) }}
              <label for="{{ edit_form.kilometers.vars.id }}">{% trans %}pumpdata_kilometers{% endtrans %}</label>
			  {{ form_widget(edit_form.kilometers, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
			  {{ form_errors(edit_form.car) }}
              <label for="{{ edit_form.car.vars.id }}">{% trans %}pumpdata_car{% endtrans %}</label>
			  {{ form_widget(edit_form.car, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
			  {{ form_errors(edit_form.notes) }}
              <label for="{{ edit_form.notes.vars.id }}">{% trans %}pumpdata_notes{% endtrans %}</label>
			  {{ form_widget(edit_form.notes, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default">{% trans %}pumpdata_save{% endtrans %}</button>
          </div>	
              {{ form_rest(edit_form) }}
          </form>

        </div>
      </section>
    </div>
    <div class="col-lg-8">
        <a href="{{ path('admin_pump_fueldata') }}" class="btn btn-info">
	    {% trans %}pumpdata_back_to_list{% endtrans %}
	</a>
	<a href="{{ path('admin_pump_fueldata_new') }}" class="btn btn-info">
	  {% trans %}pumpdata_create{% endtrans %}
	</a>

		<form action="{{ path('admin_pump_fueldata_delete', { 'id': entity.id }) }}" method="post" onsubmit="return confirmDeleteDialog();" style="float: right;">
		  <input type="hidden" name="_method" value="DELETE" />
			{{ form_widget(delete_form) }}
		  <button class="btn btn-danger" type="submit">{% trans %}pumpdata_delete{% endtrans %}</button>
		</form>
	</div>	
</div>
{% endblock %}
