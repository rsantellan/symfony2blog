{% extends 'MaithPumpMyGasBundle::layout.html.twig' %}

{% block javascripts %}
  <script src="{{ asset('bundles/maithpumpmygas/vendor/parsley.min.js') }}"></script>
  <script src="{{ asset('bundles/maithpumpmygas/vendor/bootstrap-datepicker/bootstrap-datepicker.js') }}"></script>
  <script type="text/javascript">
	$(function () {
	  $(".datepicker").datepicker();
      });
  </script>
{% endblock %}
{% block pagestylesheets %}
  <link rel="stylesheet" href="{{ asset('bundles/maithpumpmygas/vendor/bootstrap-datepicker/datepicker.css') }}" >
{% endblock %}

{% block body -%}
<div class="row">
  <div class="col-lg-8">
    <section class="panel">
      <header class="panel-heading">{% trans %}pumpdata_create_entry{% endtrans %}</header>
      <div class="panel-body">
        <form action="{{ path('admin_pump_fueldata_create') }}" method="post" {{ form_enctype(form) }} role="form">
          <div class="form-group">
			  {{ form_errors(form.fueldate) }}
              <label for="{{ form.fueldate.vars.id }}">{% trans %}pumpdata_fueldate{% endtrans %}</label>
              <div class="">
			<div class="input-group mg-b-md input-append date datepicker" data-date="{{ form.fueldate.vars.value | date('d-m-Y') }}" data-date-format="dd-mm-yyyy">
				{{ form_widget(form.fueldate, {'attr' : {'class' : 'form-control'}}) }}
				<span class="input-group-btn">
					<button class="btn btn-white add-on" type="button">
						<i class="fa fa-calendar"></i>
					</button>
				</span>
			</div>
		  </div>
			  {#{ form_widget(form.fueldate, {'attr' : {'class' : 'form-control'}}) }#}
          </div>
          <div class="form-group">
			  {{ form_errors(form.price) }}
              <label for="{{ form.price.vars.id }}">{% trans %}pumpdata_price{% endtrans %}</label>
			  {{ form_widget(form.price, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
			  {{ form_errors(form.fuelquantity) }}
              <label for="{{ form.fuelquantity.vars.id }}">{% trans %}pumpdata_fuelquantity{% endtrans %}</label>
			  {{ form_widget(form.fuelquantity, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
			  {{ form_errors(form.kilometers) }}
              <label for="{{ form.kilometers.vars.id }}">{% trans %}pumpdata_kilometers{% endtrans %}</label>
			  {{ form_widget(form.kilometers, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
			  {{ form_errors(form.car) }}
              <label for="{{ form.car.vars.id }}">{% trans %}pumpdata_car{% endtrans %}</label>
			  {{ form_widget(form.car, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
			  {{ form_errors(form.notes) }}
              <label for="{{ form.notes.vars.id }}">{% trans %}pumpdata_notes{% endtrans %}</label>
			  {{ form_widget(form.notes, {'attr' : {'class' : 'form-control'}}) }}
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default">{% trans %}pumpdata_save{% endtrans %}</button>
          </div>	
              {{ form_rest(form) }}
          </form>
        </div>
      </section>
    </div>
    <div class="col-lg-12 text-center">
	  <a href="{{ path('admin_pump_fueldata') }}" class="btn btn-info">
		  {% trans %}pumpdata_back_to_list{% endtrans %}
	  </a>
	</div>
</div>
{% endblock %}

