{% extends 'RSantellanSitioBundle::layout.html.twig' %}
{% block javascripts %}
<script type="text/javascript" src="{{ asset('bundles/rsantellansitio/js/camera.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/rsantellansitio/js/index.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/rsantellansitio/js/jcarousel.min.js') }}"></script>
{% endblock %}

{% block body %}

  <!-- START SLIDER WRAPPER -->
  <div id="slider-wrapper">
      <div class="btop-1px"></div>
      <div class="container">
          <div class="sixteen columns" id="cta-block">
              <h5>{% trans %}rsantellan_site_index_title{% endtrans %}</h5>
          </div><!-- #cta-block -->

          <!-- start slider -->
          <div class="sixteen columns camera_wrap camera_burgundy_skin clearfix" id="camera_wrap_1">
              <div data-src="{{ asset('bundles/rsantellansitio/images/sliders/camera/terminal-banner.png') }}">
                  <div class="camera_caption fadeFromBottom">
                      {% trans %}rsantellan_site_index_banner_1{% endtrans %}
                  </div>
              </div>
              <div data-src="{{ asset('bundles/rsantellansitio/images/sliders/camera/php-banner.png') }}">
                  <div class="camera_caption fadeFromBottom">
                      {% trans %}rsantellan_site_index_banner_2{% endtrans %}
                  </div>
              </div>
              <div data-src="{{ asset('bundles/rsantellansitio/images/sliders/camera/python-banner.png') }}">
                  <div class="camera_caption fadeFromBottom">
                      {% trans %}rsantellan_site_index_banner_3{% endtrans %}
                  </div>
              </div>
              <div data-src="{{ asset('bundles/rsantellansitio/images/sliders/camera/wordpress-banner.png') }}">
                  <div class="camera_caption fadeFromBottom">
                      {% trans %}rsantellan_site_index_banner_4{% endtrans %}
                  </div>
              </div>
              <div data-src="{{ asset('bundles/rsantellansitio/images/sliders/camera/database-banner.png') }}">
                  <div class="camera_caption fadeFromBottom">
                      {% trans %}rsantellan_site_index_banner_5{% endtrans %}
                  </div>
              </div>
          </div><!-- #camera_wrap_1 -->
          <!-- end slider -->

      </div><!-- .container -->
      <div class="bbottom-1px"></div>
  </div><!-- #slider-wraper -->
  <!-- END SLIDER WRAPPER -->	
  
  <!-- LATEST PROJECTS -->
	<div class="container header-block">
		<!-- start header -->
		<div class="sixteen columns lp-header">
			<h6>{% trans %}rsantellan_site_index_projects_latest{% endtrans %}</h6>
			<div class="nav-projects">
				<a href="{{ path('rsantellan_sitio_projects')}}" class="button viewall">{% trans %}rsantellan_site_index_projects_view_all{% endtrans %}</a>
			</div><!-- .nav-projects -->
		</div><!-- .sixteen  -->
		<!-- end header -->
	</div><!-- .container -->

	<div id="latest-projects" class="container">
        <!-- start carousel -->
		<ul id="projects-carousel" class="jcarousel-skin-tango" >
            {% for project in projects %}
              {{ include("RSantellanSitioBundle:Default:indexProject.html.twig", {'project' : project }) }}
            {% endfor %}
		</ul><!-- #projects-carousel -->
	</div><!-- .container -->
	<!-- END LATEST PROJECTS -->

{% endblock %}