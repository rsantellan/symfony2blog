{% extends 'RSantellanSitioBundle::layout.html.twig' %}
{% block javascripts %}
<script type="text/javascript" src="{{ asset('bundles/rsantellansitio/js/slides.min.jquery.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/rsantellansitio/js/jquery.colorbox-min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/rsantellansitio/js/project.js') }}"></script>
{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/rsantellansitio/css/colorbox.css') }}" />
{% endblock %}
{% block body %}
<!-- START SEPARATOR  -->
<div id="separator">
    <div class="btop-1px"></div>
    <div class="container">
        <!-- start separator -->
        <div class="sixteen columns">
            <h4 class="page-title">{{ project.name}}</h4>
        </div><!-- sixteen columns -->
    </div><!-- .container -->
    <div class="bbottom-1px"></div>
</div><!-- #separator -->
<!-- END SEPARATOR -->	



<!-- START PORTFOLIO ITEM WRAPPER -->
<div class="container main-wrapper">
    <div id="main-content" class="twelve columns clearfix">
        <!-- ITEM SLIDESHOW -->
        <div class="entry-item special-format-gallery">
            <div class="image-item">
                <!-- Slideshow -->
                <div id="slidesjs-container">
                    <div id="slides-item">
                        <div class="slides_container">
                            {% if mainAlbums is not null %}
                                {% for image in mainAlbums.files %}
                                  <img alt="{{ image.showName }}" src="{{ image.fullPath | mImage(654, 327, 'rce') }}" />
                                {% endfor %}
                            {% endif %}
                        </div><!-- .slides_container -->
                    </div><!-- slides-item -->
                </div><!-- #container -->
            </div><!-- image-item -->
            <div class="text-item clearfix">
                    <div class="title-item">
                    <h6>{{ project.tipoDeTrabajo }} - {{ project.cliente }}</h6>	
                    </div>
                <p>{{ project.description }}</p>
                {% if imagesAlbum is not null %}
                    {% for image in imagesAlbum.files %}
                      <div class="four-column {% if loop.index is divisible by(4) %}column-last{% endif %}">
                        <a class="zoom" href="{{ image.fullPath | mImage(500, 500, 'mpr') }}"><img src="{{ image.fullPath | mImage(500, 500, 'rce') }}" alt="" class="border " /></a>
                        <p class="description">{{ image.showName }}</p>
                    </div>  
                    {% endfor %}
                {% endif %}
            </div><!-- text-item -->				
        </div><!-- entry-item -->


    </div><!-- main-content -->

    <!-- START SIDEBAR -->
    <div id="sidebar" class="four columns">
        <h3>Funcionalidades utilizadas</h3>
        {% for complexTag in project.complexTags %}
            <h4>{{ complexTag.name }}</h4>
            <p>
                <img alt="{{ complexTag.name[:45] }}" src="{{ complexTag.id | mAvatar(complexTag.fullClassName, 'main') | mImage(70, 70, 'rce') }}" />
            </p>
            <p>{{ complexTag.description }}</p>
            <hr/>
        {% endfor %}
    </div><!-- sidebar -->
    
    <div class="sixteen columns divider-item-1px"></div>			
</div><!-- .container -->
<input type="hidden" value="{{ asset('bundles/rsantellansitio/images/loading.gif') }}" id="image-loader-location" /> 
{% endblock %}
