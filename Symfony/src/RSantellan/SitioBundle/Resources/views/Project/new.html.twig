{% extends 'RSantellanSitioBundle:Admin:layout.html.twig' %}

{% block body -%}
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Project creation</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-10">
			<form action="{{ path('rsproject_create') }}" method="post" {{ form_enctype(form) }}>
			  <div class="form-group {% if form.name.vars.errors|length %}has-error{% endif %}">
				  {{ form_label(form.name) }}
				  {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
				  <p class="help-block">{{ form_errors(form.name) }}</p>
			  </div>	
			  <div class="form-group {% if form.cliente.vars.errors|length %}has-error{% endif %}">
				  {{ form_label(form.cliente) }}
				  {{ form_widget(form.cliente, {'attr': {'class': 'form-control'}}) }}
				  <p class="help-block">{{ form_errors(form.cliente) }}</p>
			  </div>
		      <div class="form-group {% if form.tipo_de_trabajo.vars.errors|length %}has-error{% endif %}">
				  {{ form_label(form.tipo_de_trabajo) }}
				  {{ form_widget(form.tipo_de_trabajo, {'attr': {'class': 'form-control'}}) }}
				  <p class="help-block">{{ form_errors(form.tipo_de_trabajo) }}</p>
			  </div>
			  <div class="form-group {% if form.description.vars.errors|length %}has-error{% endif %}">
				  {{ form_label(form.description) }}
				  {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
				  <p class="help-block">{{ form_errors(form.description) }}</p>
			  </div>
			  <div class="form-group {% if form.category.vars.errors|length %}has-error{% endif %}">
				  {{ form_label(form.category) }}
				  {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
				  <p class="help-block">{{ form_errors(form.category) }}</p>
			  </div>
				{#{ form_widget(form) }#}

				{{ form_errors(form) }}
				{{ form_rest(form) }}
			  <div class="form-group">
				  <input type="submit" class="btn btn-default" value="Crear"/>
			  </div>
			  </form>
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </div>
  <div class="row">
	<div class="col-lg-6">
	  <a class="btn btn-info" href="{{ path('rsproject') }}">Back to the list</a>
	</div>
  </div>
{% endblock %}
