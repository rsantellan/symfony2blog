{% extends 'RSantellanSitioBundle:Admin:bootstrap-layout.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/maithcommonimage/css/maithalbums.css') }}" />
  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/maithcommonadmin/css/colorbox.css') }}" />
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/jquery.colorbox-min.js') }}"></script>    
  <script type="text/javascript" src="{{ asset('bundles/maithcommonimage/js/imagesManager.js') }}"></script>    
{% endblock %}

{% block body -%}
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Project edit</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-10">
			<form action="{{ path('rsproject_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
			  <input type="hidden" name="_method" value="PUT" />
			  <div class="form-group {% if edit_form.name.vars.errors|length %}has-error{% endif %}">
				  {{ form_label(edit_form.name) }}
				  {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
				  <p class="help-block">{{ form_errors(edit_form.name) }}</p>
			  </div>	
			  <div class="form-group {% if edit_form.cliente.vars.errors|length %}has-error{% endif %}">
				  {{ form_label(edit_form.cliente) }}
				  {{ form_widget(edit_form.cliente, {'attr': {'class': 'form-control'}}) }}
				  <p class="help-block">{{ form_errors(edit_form.cliente) }}</p>
			  </div>
		      <div class="form-group {% if edit_form.tipo_de_trabajo.vars.errors|length %}has-error{% endif %}">
				  {{ form_label(edit_form.tipo_de_trabajo) }}
				  {{ form_widget(edit_form.tipo_de_trabajo, {'attr': {'class': 'form-control'}}) }}
				  <p class="help-block">{{ form_errors(edit_form.tipo_de_trabajo) }}</p>
			  </div>
			  <div class="form-group {% if edit_form.description.vars.errors|length %}has-error{% endif %}">
				  {{ form_label(edit_form.description) }}
				  {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
				  <p class="help-block">{{ form_errors(edit_form.description) }}</p>
			  </div>
			  <div class="form-group {% if edit_form.category.vars.errors|length %}has-error{% endif %}">
				  {{ form_label(edit_form.category) }}
				  {{ form_widget(edit_form.category, {'attr': {'class': 'form-control'}}) }}
				  <p class="help-block">{{ form_errors(edit_form.category) }}</p>
			  </div>
				{#{ form_widget(form) }#}

				{{ form_errors(edit_form) }}
				{{ form_rest(edit_form) }}
			  <div class="form-group">
				  <input type="submit" class="btn btn-default" value="Editar"/>
			  </div>
			  </form>
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </div>
  <div class="row">
	  {{ render(controller('MaithCommonAdminBundle:Albums:albumsData', {'id': edit_form.vars.value.id, 'objectclass' : edit_form.vars.value.fullClassName }))}}
    <hr/>
  </div>
  <div class="row">
	<div class="col-lg-6">
	  <a class="btn btn-info" href="{{ path('rsproject') }}">Back to the list</a>
	  <form action="{{ path('rsproject_delete', { 'id': entity.id }) }}" method="post">
		<input type="hidden" name="_method" value="DELETE" />
		{{ form_widget(delete_form) }}
		<button class="btn btn-danger" type="submit">Delete</button>
	</form>
	</div>
  </div>  
{% endblock %}
