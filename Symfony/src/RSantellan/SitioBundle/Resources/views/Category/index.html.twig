{% extends 'RSantellanSitioBundle:Admin:layout.html.twig' %}
{% block javascripts %}

<script type="text/javascript" src="{{ asset('bundles/rsantellansitio/boostrap/js/plugins/dataTables/jquery.dataTables.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/rsantellansitio/boostrap/js/plugins/dataTables/dataTables.bootstrap.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/datatable/simpleStartTable.js') }}"></script>
{% endblock %}

{% block stylesheets %}
<link href="{{ asset('bundles/rsantellansitio/boostrap/css/plugins/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet">
{% endblock %}

{% block body -%}
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Category list</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">
          <table id="table_data" class="table table-striped table-bordered table-hover">

        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Orden</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.orden }}</td>
                <td>{{ entity.slug }}</td>
                <td>
				  <a class="btn btn-default" href="{{ path('category_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
			</table>
        </div>
		<div class="clear"></div>
        <a class="btn btn-primary" href="{{ path('category_new') }}">Agregar</a>
      </div>
    </div>
  </div>
</div>
    {% endblock %}
